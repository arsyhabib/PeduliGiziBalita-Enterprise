# === PeduliGiziBalita Enterprise - Render Environment ===

# App
APP_NAME="PeduliGiziBalita Enterprise"
APP_VERSION="5.0.0"
DEBUG=True
SECRET_KEY=render-ini-secret-key-ubah-di-production
PORT=8000

# Database (SQLite dulu, nanti bisa upgrade ke PostgreSQL)
DATABASE_URL=sqlite:///./peduligizi_render.db
TEST_DATABASE_URL=sqlite:///./test.db

# Redis (Render punya Redis gratis, bisa di-enable nanti)
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET_KEY=render-jwt-secret-key-ubah-di-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# WHO (biarkan default)
WHO_DATA_PATH=pygrowup
